generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String?
  Password Password?
  Manager  Manager?
  Employee Employee?
}

model Password {
  id       String @id @default(uuid())
  password String
  User     User   @relation(fields: [userId], references: [id])
  userId   String @unique
}

model Manager {
  id       String     @id @default(uuid())
  Employee Employee[]
  User     User       @relation(fields: [userId], references: [id])
  userId   String     @unique
  Task     Task[]
}

model Employee {
  id        String  @id @default(uuid())
  Manager   Manager @relation(fields: [managerId], references: [id])
  managerId String
  User      User    @relation(fields: [userId], references: [id])
  userId    String  @unique
  Task      Task[]
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  result      String?
  Manager     Manager  @relation(fields: [managerId], references: [id])
  managerId   String
  Employee    Employee @relation(fields: [employeeId], references: [id])
  employeeId  String
}
